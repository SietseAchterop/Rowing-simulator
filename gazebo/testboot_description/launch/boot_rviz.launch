<launch>

  <arg name="reconnectloops" default="false" /> <!-- true to set some joints to fixed for reconfiguring -->

  <param name="robot_description"
    command="xacro '$(find testboot_description)/urdf/boot.xacro'  reconnectloops:=$(arg reconnectloops)" />


  <!-- send fake joint values -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="true"/>
  </node>

  <!-- Combine joint values -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find testboot_description)/launch/boot.rviz"/>

</launch>
